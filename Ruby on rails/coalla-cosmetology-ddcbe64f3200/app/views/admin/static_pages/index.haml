%main#main.main.ctn
  .grid.grid__collapse
    .grid_i.grid_i__grid-2-9.sidebar>
      = render 'common/admin_sidebar'
    .grid_i.grid_i__grid-7-9>
      = render 'admin/breadcrumbs', crumbs: {'страницы' => '#'}
      %h3.tx-center СТРАНИЦЫ
      .form__admin
        .admin_header.tx-center
          .header_inner
            %a.a_under.modal{href: new_admin_static_page_path}>
              %span.icon-add> +
              Добавить страницу
        .admin_body.table.table_base-color
          .grid.grid__collapse
            = render @static_pages
      = will_paginate @static_pages, renderer: PageLinkRenderer, inner_window: 1, outer_window: 0
