%main#main.main.ctn
  .grid.grid__collapse
    .grid_i.grid_i__grid-2-9.sidebar>
      = render 'common/admin_sidebar'
    .grid_i.grid_i__grid-7-9>
      = render 'admin/breadcrumbs', crumbs: {'баннеры для блога' => admin_square_banners_path}
      %h3.tx-center Баннеры для Блога
      .form__admin
        .admin_header.tx-center
          .header_inner
            = link_to new_admin_square_banner_path, class: 'a_under' do
              %span.icon-add> +
              Добавить баннер для блога
        .admin_body.table.table_base-color
          .table_head
            .grid
              .grid_i.grid_i__grid-8-12.tx-center>
                %p Текст баннера
              .grid_i.grid_i__grid-1-12>
                %p Активен
              .grid_i.grid_i__grid-3-12>
                %p.tx-right
                  Действия
          .grid.grid__collapse
            = render collection: @square_banners, partial: 'square_banner'

