%main#main.main.ctn
  .grid.grid__collapse
    .grid_i.grid_i__grid-2-9.sidebar>
      = render 'common/admin_sidebar'
    .grid_i.grid_i__grid-7-9>
      = render 'admin/breadcrumbs', crumbs: {'учебный план' => admin_curriculum_blocks_path}
      %h3.tx-center УЧЕБНЫЙ ПЛАН
      .form__admin
        .admin_header.tx-center
          .header_inner
            = link_to new_admin_curriculum_block_path, class: 'a_under' do
              %span.icon-add> +
              Добавить блок
        .admin_body.table.table_base-color
          .table_head
            .grid
              .grid_i.grid_i__grid-4-9>
                %p заголовок
              .grid_i.grid_i__grid-3-9>
                %p курсы
              .grid_i.grid_i__grid-2-9.tx-center>
                %p действия
          .grid.grid__collapse
            = render @curriculum_blocks
      = will_paginate @curriculum_blocks, renderer: PageLinkRenderer, inner_window: 1, outer_window: 0