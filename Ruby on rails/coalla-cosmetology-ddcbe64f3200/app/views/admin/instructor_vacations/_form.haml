= form_for [:admin, @instructor_vacation], url: @instructor_vacation.new_record? ? url_for(action: :create) : url_for(action: :update, id: @instructor_vacation.id), as: :instructor_vacation, html: {id: 'instructor_vacation_form', class: 'form js-form', remote: true} do |f|
  .alert{style: 'display: none;'}
  .grid
    .grid_i.grid_i__grid-1-4.grid_i__prefix-1-10>
      = f.label :instructor_id, class: 'form_el form_label'
    .grid_i.grid_i__grid-1-2>
      .form_el.js-form_el.form_el-select2
        - # TODO (Vladimir Lelyakov): stylize select2
        = f.select :instructor_id, options_from_collection_for_select(Instructor.alphabetical_order, :id, :full_name, @instructor_vacation.instructor_id), {}, class: 'js-select2'
    .grid_i.grid_i__grid-1-4.grid_i__prefix-1-10>
      = f.label :begin_on, class: 'form_el form_label'
    .grid_i.grid_i__grid-1-2>
      .form_el.js-form_el.form_tx
        = f.text_field :begin_on, class: 'form_el_tag form_tx_tag js-datepicker', value: format_date(@instructor_vacation.begin_on)
    .grid_i.grid_i__grid-1-4.grid_i__prefix-1-10>
      = f.label :end_on, class: 'form_el form_label'
    .grid_i.grid_i__grid-1-2>
      .form_el.js-form_el.form_tx
        = f.text_field :end_on, class: 'form_el_tag form_tx_tag js-datepicker', value: format_date(@instructor_vacation.end_on)
    .grid_i.grid_i__grid--12.grid_i__prefix-3-10>
      .form_el.js-form_el.form_btn
        %p.form_el_inner.form_btn_inner СОХРАНИТЬ
        %input.form_el_tag.form_btn_tag{type: 'submit', value: ''}
  .icon_del.arcticmodal-close X

= javascript_include_tag 'admin/instructor_vacation_form'