%main#main.main.ctn
  .grid.grid__collapse
    .grid_i.grid_i__grid-2-9.sidebar>
      = render 'common/admin_sidebar'
    .grid_i.grid_i__grid-7-9>
      = render 'admin/breadcrumbs', crumbs: {'базы практики' => '#'}
      %h3.tx-center БАЗЫ ПРАКТИКИ
      .form__admin
        .admin_header.tx-center
          .header_inner
            %a.a_under.modal{data: {url: new_admin_practice_basis_path}}>
              %span.icon-add> +
              Добавить базу практики
        .admin_body.table.table_base-color
          .grid.grid__collapse
            = render collection: @practice_bases, partial: 'admin/practice_bases/practice_basis'
      = will_paginate @practice_bases, renderer: PageLinkRenderer, inner_window: 1, outer_window: 0
