%main#main.main.ctn
  .grid.grid__collapse
    .grid_i.grid_i__grid-2-9.sidebar>
      = render 'common/admin_sidebar'
    .grid_i.grid_i__grid-7-9>
      = render 'admin/breadcrumbs', crumbs: {'Виды платежа Магазин' => '#'}
      %h3.tx-center Виды платежа Магазин
      .form__admin
        .admin_header.tx-center
          .header_inner
            %a.a_under.modal{data: {url: new_admin_magazine_payment_type_path}}>
              %span.icon-add> +
              Добавить вид платежа
        .admin_body.table.table_base-color
          .grid.grid__collapse
            = render collection: @magazine_payment_types, partial: 'admin/magazine_payment_types/magazine_payment_type'
      = will_paginate @magazine_payment_types, renderer: PageLinkRenderer, inner_window: 1, outer_window: 0
