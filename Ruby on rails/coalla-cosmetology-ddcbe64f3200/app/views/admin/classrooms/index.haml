%main#main.main.ctn
  .grid.grid__collapse
    .grid_i.grid_i__grid-2-9.sidebar>
      = render 'common/admin_sidebar'
    .grid_i.grid_i__grid-7-9>
      = render 'admin/breadcrumbs', crumbs: {'АУДИТОРИИ' => '#'}
      %h3.tx-center АУДИТОРИИ
      .form__admin
        .admin_header.tx-center
          .header_inner
            %a.a_under.modal{data: {url: new_admin_classroom_path}}>
              %span.icon-add> +
              Добавить аудиторию
        .admin_body.table.table_base-color
          .grid.grid__collapse
            = render collection: @classrooms, partial: 'admin/classrooms/classroom'
      = will_paginate @classrooms, renderer: PageLinkRenderer, inner_window: 1, outer_window: 0
