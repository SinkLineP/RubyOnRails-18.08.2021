%main#main.main.ctn
  .grid.grid__collapse
    .grid_i.grid_i__grid-2-9.sidebar>
      = render 'common/admin_sidebar'
    .grid_i.grid_i__grid-7-9>
      = render 'admin/breadcrumbs', crumbs: {'разделы документов' => admin_document_sections_path}
      %h3.tx-center Разделы документов
      .form__admin
        .admin_header.tx-center
          .header_inner
            = link_to new_admin_document_section_path, class: 'a_under' do
              %span.icon-add> +
              Добавить раздел
        .admin_body.table.table_base-color
          .table_head
            .grid
              .grid_i.grid_i__grid-7-9>
                %p Название
              .grid_i.grid_i__grid-2-9.tx-center>
                %p Действия
          .grid.grid__collapse
            = render @document_sections
      = will_paginate @document_sections, renderer: PageLinkRenderer, inner_window: 1, outer_window: 0