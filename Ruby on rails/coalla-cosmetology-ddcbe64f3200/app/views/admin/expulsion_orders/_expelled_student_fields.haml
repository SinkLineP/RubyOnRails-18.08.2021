          = f.object.full_name
    .grid_i.grid_i__grid-1-6.grid_i__prefix-1-10
      %label.form_el.form_label Часы
    .grid_i.grid_i__grid-2-6
      .form_el.js-form_el.form_tx
        = f.text_field :hours, class: 'form_el_tag form_tx_tag'