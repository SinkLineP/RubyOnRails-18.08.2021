%main#main.main.ctn
  .grid.grid__collapse
    .grid_i.grid_i__grid-2-9.sidebar>
      = render 'common/admin_sidebar'
    .grid_i.grid_i__grid-7-9>
      .content
        = render 'admin/breadcrumbs', crumbs: {'конфигуратор' => '#'}
      %h3.tx-center КОНФИГУРАТОР
      = form_for [:admin, @configurator], url: admin_configurator_path, html: {class: 'form js-form form__admin'} do |f|
        .admin_header
        .admin_body
          .mt-1
            %label.form_el.form_label Положение
            .form_el.js-form_el.form_tx
              = f.select :value, [['Первый экран', '1'], ['Рядом с подвалом', '0']], {}, class: 'form_el_tag form_select_tag selectordie'
          .grid.mt-2
            .grid_i.grid_i__grid-1-4>
              .form_el.js-form_el.form_btn.form_btn__small
                %p.form_el_inner.form_btn_inner СОХРАНИТЬ
                = button_tag type: 'submit', class: 'form_el_tag form_btn_tag', name: 'commit', value: 'save'