%main#main.main.ctn
  .grid.grid__collapse
    .grid_i.grid_i__grid-2-9.sidebar>
      = render 'common/admin_sidebar'
    .grid_i.grid_i__grid-7-9>
      = render 'admin/breadcrumbs', crumbs: {'опросы' => admin_survey_responses_path}
      %h3.tx-center ОПРОСЫ
      .form__admin
        .admin_header.tx-center
        .admin_body.table.table_base-color
          .table_head
            .grid
              .grid_i.grid_i__grid-1-9>
                %p Дата и время опроса
              .grid_i.grid_i__grid-2-9>
                %p Студент
              .grid_i.grid_i__grid-3-9>
                %p Группа
              .grid_i.grid_i__grid-1-9>
                %p Оценка
              .grid_i.grid_i__grid-1-9>
                %p ID
              .grid_i.grid_i__grid-1-9>
                %p.tx-right
                  действия
          .grid.grid__collapse
            = render collection: @survey_responses, partial: 'survey_response'
      = will_paginate @survey_responses, renderer: PageLinkRenderer, inner_window: 1, outer_window: 0
