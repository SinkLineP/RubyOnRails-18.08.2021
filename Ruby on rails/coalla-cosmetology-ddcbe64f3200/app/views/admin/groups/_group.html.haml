  %form.form.js-form
    .form_el.js-form_el.form_checkbox.mt-1.mb-1
      %input.form_el_tag.form_checkbox_tag{type: 'checkbox', checked: group.active?, disabled: true}
.grid_i.grid_i__grid-1-12.tx-center>
  %form.form.js-form
    .form_el.js-form_el.form_checkbox.mt-1.mb-1
      %input.form_el_tag.form_checkbox_tag{type: 'checkbox', checked: group.fake?, disabled: true}
.grid_i.grid_i__grid-1-12.tx-center>
  = group.academics_place
  \/
  = group.academics_count
