  - if !group.students.any? && can?(:destroy, Group)
    = link_to admin_group_path(group), method: :delete do
      .icon_del X
  = link_to edit_admin_group_path(group) do
    .icon_edit &#9998;
  = link_to clone_admin_group_path(group), method: :post do
    .icon_edit +
  - if group.students.any?
    = link_to 'Рассылка', new_admin_course_notice_path(group.course, group_id: group.id), class: 'a_under tx-xs'