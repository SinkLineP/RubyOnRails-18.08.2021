%main#main.main.ctn
  .grid.grid__collapse
    .grid_i.grid_i__grid-2-9.sidebar>
      = render 'common/admin_sidebar'
    .grid_i.grid_i__grid-7-9>
      = render 'admin/breadcrumbs', crumbs: {'промокоды' => admin_promo_codes_path}
      %h3.tx-center ПРОМОКОДЫ
      .form__admin
        .admin_header.tx-center
          .header_inner
            = link_to new_admin_promo_code_path, class: 'a_under' do
              %span.icon-add> +
              Добавить промокод
        .admin_body.table.table_base-color
          .table_head
            .grid
              .grid_i.grid_i__grid-1-9>
                %p Код
              .grid_i.grid_i__grid-2-9>
                %p Скидка
              .grid_i.grid_i__grid-2-9>
                %p Срок действия
              .grid_i.grid_i__grid-2-9>
                %p Многоразовый
              .grid_i.grid_i__grid-1-9>
                %p Погашен
              .grid_i.grid_i__grid-1-9>
                %p.tx-right
                  действия
          .grid.grid__collapse
            = render collection: @promo_codes, partial: 'promo_code'
      = will_paginate @promo_codes, renderer: PageLinkRenderer, inner_window: 1, outer_window: 0
