%main#main.main.ctn
  .grid.grid__collapse
    .grid_i.grid_i__grid-2-9.sidebar>
      = render 'common/admin_sidebar'
    .grid_i.grid_i__grid-7-9>
      = render 'admin/breadcrumbs', crumbs: {'банеры' => admin_blocks_path}
      %h3.tx-center Баннеры
      .form__admin
        .admin_header.tx-center
          .header_inner
            = link_to new_admin_banner_path, class: 'a_under' do
              %span.icon-add> +
              Добавить баннер
        .admin_body.table.table_base-color
          .table_head
            .grid
              .grid_i.grid_i__grid-2-12>
                %p Тип баннера
              .grid_i.grid_i__grid-6-12.tx-center>
                %p Текст баннера
              .grid_i.grid_i__grid-1-12>
                %p Активен
              .grid_i.grid_i__grid-3-12>
                %p.tx-right
                  Действия
          .grid.grid__collapse
            = render collection: @banners, partial: 'banner'

