%main#main.main.ctn
  .grid.grid__collapse
    .grid_i.grid_i__grid-2-9.sidebar>
      = render 'common/admin_sidebar'
    .grid_i.grid_i__grid-7-9>
      = render 'admin/breadcrumbs', crumbs: {'скидки' => '#'}
      %h3.tx-center СКИДКИ
      .form__admin
        .admin_header.tx-center
          .header_inner
            %a.a_under.modal{data: {url: new_admin_discount_path}}>
              %span.icon-add> +
              Добавить скидку
        .admin_body.table.table_base-color
          .table_head
            .grid
              .grid_i.grid_i__grid-3-6>
                %p Название
              .grid_i.grid_i__grid-1-6.tx-center>
                %p Архивная
              .grid_i.grid_i__grid-1-6.tx-center>
                %p Тип
              .grid_i.grid_i__grid-1-6.tx-center>
                %p Значение
          .grid.grid__collapse
            = render collection: @discounts, partial: 'admin/discounts/discount'
      = will_paginate @discounts, renderer: PageLinkRenderer, inner_window: 1, outer_window: 0

- content_for :js do
  = javascript_include_tag 'admin/discounts'
