%main#main.main.ctn
  .grid.grid__collapse
    .grid_i.grid_i__grid-2-9.sidebar>
      = render 'common/admin_sidebar'
    .grid_i.grid_i__grid-7-9>
      = render 'admin/breadcrumbs', crumbs: {'преподаватели' => '#'}
      %h3.tx-center ПРЕПОДАВАТЕЛИ
      .form__admin
        .admin_header.tx-center
          .header_inner
            %a.a_under{href: new_admin_instructor_path}>
              %span.icon-add> +
              Добавить преподавателя
        .admin_body.table.table_base-color
          .table_head
            .grid
              .grid_i.grid_i__grid-2-6>
                - if params[:per_page].present?
                  %a.a_under.modal{href: admin_instructors_path} Постраничный вывод
                - else
                  %a.a_under.modal{href: admin_instructors_path(per_page: 1000000)} Весь список
              .grid_i.grid_i__grid-1-6.grid_i__prefix-2-6.tx-right>
                последний логин
              .grid_i.grid_i__grid-1-6.tx-center>
                действия
          .grid.grid__collapse
            = render collection: @instructors, partial: 'admin/instructors/instructor'
      = will_paginate @instructors, renderer: PageLinkRenderer, inner_window: 1, outer_window: 0
