%main#main.main.ctn
  .grid.grid__collapse
    .grid_i.grid_i__grid-2-9.sidebar>
      = render 'common/admin_sidebar'
    .grid_i.grid_i__grid-7-9>
      = render 'admin/breadcrumbs', crumbs: {'отзывы' => admin_recalls_path}
      %h3.tx-center Отзывы
      .form__admin
        .admin_header.tx-center
          .header_inner
            = link_to new_admin_recall_path, class: 'a_under' do
              %span.icon-add> +
              Добавить отзыв
        .admin_body.table.table_base-color
          .table_head
            .grid
              .grid_i.grid_i__grid-2-9>
                %p автор
              .grid_i.grid_i__grid-3-9>
                %p отзыв
              .grid_i.grid_i__grid-2-9>
                %p курсы
              .grid_i.grid_i__grid-2-9.tx-center>
                %p действия
          .grid.grid__collapse
            = render @recalls
      = will_paginate @recalls, renderer: PageLinkRenderer, inner_window: 1, outer_window: 0