%main#main.main.ctn
  .grid.grid__collapse
    .grid_i.grid_i__grid-2-9.sidebar>
      = render 'common/admin_sidebar'
    .grid_i.grid_i__grid-7-9>
      = render 'admin/breadcrumbs', crumbs: {'консультации' => admin_consultations_path}
      %h3.tx-center Консультации
      .form__admin
        .admin_header.tx-center
          .header_inner
            = link_to new_admin_consultation_path, class: 'a_under' do
              %span.icon-add> +
              Добавить запись
        .admin_body.table.table_base-color
          = render 'admin/consultations/date_filter'
          .table_head
            .grid
              .grid_i.grid_i__grid-2-9>
                %p дата
              .grid_i.grid_i__grid-1-9>
                %p время
              .grid_i.grid_i__grid-3-9>
                %p ФИО
              .grid_i.grid_i__grid-2-9>
                %p email
              .grid_i.grid_i__grid-1-9.tx-center>
                %p действия
          .grid.grid__collapse
            = render @consultations
      = will_paginate @consultations, renderer: PageLinkRenderer, inner_window: 1, outer_window: 0