%section.partners-logos
  .h4.partners-logos__title= t("#{current_shop.code}.partners")

  .partners-logos__wrap
    .partners-logos__list#partners-logos-slider
      = render partial: 'layouts/courses_shop/components/partner', collection: @partners, as: :partner

    - if @partners.count > 3
      = link_to '#', class: 'partners-logos__nav partners-logos__nav--prev', id: 'partners-logos-slider-prev' do
        %svg.icon(role='img' data-size='34')
          %use(xlink:href='/assets/courses_shop/icons.svg#arrow-left')
      = link_to '#', class: 'partners-logos__nav partners-logos__nav--next', id: 'partners-logos-slider-next' do
        %svg.icon(role='img' data-size='34')
          %use(xlink:href='/assets/courses_shop/icons.svg#arrow-right')