            .h4.course-item__title
              = link_to 'Косметик Эстетист для людей с&nbsp;мед. образованием'.html_safe, '#course-item-3', class: 'js-hover'
            .course-item__price
              %b от&nbsp;26&nbsp;000&nbsp;руб./мес
            %ul.course-item__actions
              %li
                = link_to 'Подробнее', '#course-item-3', class: 'button button--base-outline js-hover', 'data-size' => 'sm'
